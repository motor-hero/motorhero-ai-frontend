{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,          // Ensure TypeScript emits files even if there are errors
    "noEmitOnError": false,   // Disable error checking during the build
    "jsx": "react-jsx",
    "strict": false,          // Turn off strict type checking
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src", "*.ts", "**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
